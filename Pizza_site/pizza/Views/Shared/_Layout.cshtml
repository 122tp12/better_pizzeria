@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="~/js/script.js"></script>
<style src="~/css/style.css"></style>
<style>
    .ranged {
        padding-left: 30px;
    }
    .ranged-2 {
        padding-left: 30px;
        padding-top: 47px;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand ranged" href="~/Index">Pizza</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">

            <a class="nav-item nav-link active" href="~/Index">Index</a>
            <a class="nav-item nav-link active" href="~/Index/OwnChoise">OwnChoise</a>

            <a class="nav-item nav-link active" href="~/Cart/OrderConfirm">Cart <span class="badge bg-primary rounded-pill">@ViewBag.cart</span></a>


        </div>
    </div>
    <div class="navbar-nav">
        @if (ViewBag.Valute == null || ViewBag.Valute == "uah")
        {
            <a href="/Valute/uah?path=@ViewBag.path" class="btn-danger btn">UAH</a>
        }
        else
        {
            <a href="/Valute/uah?path=@ViewBag.path" class="btn-dark btn">UAH</a>
        }
        @if (ViewBag.Valute == "rub")
        {
            <a href="/Valute/rub?path=@ViewBag.path" class="btn-danger btn">RUS</a>
        }
        else
        {
            <a href="/Valute/rub?path=@ViewBag.path" class="btn-dark btn">RUS</a>
        }
        @if (ViewBag.Valute == "dol")
        {
            <a href="/Valute/dol?path=@ViewBag.path" class="btn-danger btn">DOL</a>
        }
        else
        {
            <a href="/Valute/dol?path=@ViewBag.path" class="btn-dark btn">DOL</a>
        }
    </div>
</nav>

@RenderBody()